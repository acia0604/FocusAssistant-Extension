{
  "manifest_version": 3,
  "name": "Focus Assistant",
  "version": "1.0",
  "description": "Productivity reminder for entertainment sites",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "options.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["<all_urls>"]
  }]
}